{
	"name": "Sprintagen",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"TZ": "${localEnv:TZ:Europe/Zurich}",
			"CLAUDE_CODE_VERSION": "latest",
			"GIT_DELTA_VERSION": "0.18.2",
			"ZSH_IN_DOCKER_VERSION": "1.2.0"
		}
	},
	"runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
	"customizations": {
		"vscode": {
			"extensions": [
				"anthropic.claude-code",
				"biomejs.biome",
				"bradlc.vscode-tailwindcss",
				"prisma.prisma",
				"eamodio.gitlens"
			],
			"settings": {
				"editor.defaultFormatter": "biomejs.biome",
				"editor.formatOnSave": true,
				"editor.codeActionsOnSave": {
					"quickfix.biome": "explicit",
					"source.organizeImports.biome": "explicit"
				},
				"[typescript]": {
					"editor.defaultFormatter": "biomejs.biome"
				},
				"[typescriptreact]": {
					"editor.defaultFormatter": "biomejs.biome"
				},
				"[javascript]": {
					"editor.defaultFormatter": "biomejs.biome"
				},
				"[json]": {
					"editor.defaultFormatter": "biomejs.biome"
				},
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "bash",
						"icon": "terminal-bash"
					},
					"zsh": {
						"path": "zsh"
					}
				},
				"files.eol": "\n",
				"typescript.tsdk": "node_modules/typescript/lib"
			}
		}
	},
	"remoteUser": "node",
	"mounts": [
		"source=sprintagen-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
		"source=sprintagen-claude-config-${devcontainerId},target=/home/node/.claude,type=volume",
		"source=sprintagen-node_modules,target=/workspace/node_modules,type=volume"
	],
	"containerEnv": {
		"NODE_ENV": "development",
		"NODE_OPTIONS": "--max-old-space-size=4096",
		"CLAUDE_CONFIG_DIR": "/home/node/.claude",
		"POWERLEVEL9K_DISABLE_GITSTATUS": "true"
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
	"workspaceFolder": "/workspace",
	"postCreateCommand": "bash .devcontainer/post-create.sh",
	"postStartCommand": "sudo /usr/local/bin/init-firewall.sh || echo 'Firewall setup skipped (optional for development)'",
	"forwardPorts": [3000, 4096],
	"portsAttributes": {
		"3000": {
			"label": "Next.js Dev Server",
			"onAutoForward": "notify"
		},
		"4096": {
			"label": "Opencode Server",
			"onAutoForward": "silent"
		}
	}
}
